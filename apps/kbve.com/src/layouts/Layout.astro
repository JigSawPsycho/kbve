---
interface Props {
	title: string;
	description: string;
	image?: string;
}
const { title, description } = Astro.props;
import { AstroVe as VE } from '@kbve/astro-ve';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<VE widget="header:external:toastify" data="" />
		<VE widget="header:external:flowbite" data="" class="" />
		<VE widget="header:external:lottie" data="dot" />
	</head>

	<div class="h-screen w-full bg-[#13151A] relative flex overflow-hidden">
		<VE widget="nav:aside:demo" data="" />
		<VE widget="drawer:flowbite:right" id="drawer-right" dyn={false}>
			<slot name="description">
				<div
					class="max-w-xs p-6 rounded-md shadow-md bg-gray-900 text-gray-50">
					<img
						src="https://source.unsplash.com/random/300x300/?1"
						alt=""
						class="object-cover object-center w-full rounded-md h-72 bg-gray-500"
					/>
					<div class="mt-6 mb-2">
						<span
							class="block text-xs font-medium tracki uppercase text-orange-400">
							Quisque
						</span>
						<h2 class="text-xl font-semibold tracki">
							Nam maximus purus
						</h2>
					</div>
					<p class="">
						Mauris et lorem at elit tristique dignissim et
						ullamcorper elit. In sed feugiat mi. Etiam ut lacinia
						dui.
					</p>
				</div>
			</slot>
		</VE>

		<VE widget="drawer:flowbite:bottom" id="drawer-swipe" dyn={false} />

		<!--
		<VE widget="drawer:flowbite:demo"/>
			 -->
		<div class="w-full h-full flex flex-col justify-between">
			<header
				class="h-16 w-full flex items-center relative justify-center px-5 space-x-10 bg-zinc-950">
				<div
					class="flex flex-shrink-0 items-center space-x-4 text-white">
					<div class="flex flex-row items-end">
						<VE
							widget="nav:v01d:auto"
							logo="/assets/img/letter_logo.png">
							<VE
								widget="kbve:user:user"
								avatar="https://flowbite.com/docs/images/people/profile-picture-3.jpg"
							/>
							<div class="text-center">
								<button
									class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-3 py-1 focus:outline-none"
									type="button"
									data-drawer-target="drawer-swipe"
									data-drawer-show="drawer-swipe"
									data-drawer-placement="bottom"
									data-drawer-edge="true"
									data-drawer-edge-offset="bottom-[60px]"
									aria-controls="drawer-swipe">
									Menu
								</button>
							</div>
						</VE>
					</div>
				</div>
			</header>

			<main class="max-w-full h-full flex relative overflow-y-hidden">
				<div
					class="h-full w-full m-4 flex flex-wrap items-start justify-start rounded-tl grid-flow-col auto-cols-max gap-4 overflow-y-scroll">
					<slot />
				</div>
			</main>
		</div>
	</div>

	<style is:global>
		:root {
			--color-kbve-menu-bg-dyn: #fff333;
			--accent: 136, 58, 234;
			--accent-light: 224, 204, 250;
			--accent-dark: 49, 10, 101;
			--accent-gradient: linear-gradient(
				45deg,
				rgb(var(--accent)),
				rgb(var(--accent-light)) 30%,
				white 60%
			);
		}

		code {
			font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
				DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New,
				monospace;
		}
	</style>
</html>
