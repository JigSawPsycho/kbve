---
interface Props {
	title: string;
	description: string;
	image?: string;
}
const { title, description } = Astro.props;
import { AstroVe as VE } from '@kbve/astro-ve';
import Menu from './Menu.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<VE widget="header:external:toastify" data="" />
		<VE widget="header:external:flowbite" data="" class="" />
		<VE widget="header:external:lottie" data="dot" />
	</head>

	<div class="h-screen w-full bg-zinc-950 relative flex overflow-hidden">
		<Menu />

		<!--
		<VE widget="drawer:flowbite:demo"/>
			 -->
		<div class="w-full h-full flex flex-col justify-between">
			<header
				class="h-16 w-full flex items-center relative justify-center px-5 space-x-10 bg-zinc-950">
				<div
					class="flex flex-shrink-0 items-center space-x-4 text-white">
					<div class="flex flex-row items-end">
						<VE
							widget="nav:v01d:auto"
							logo="/assets/img/letter_logo.png">
							<VE
								widget="kbve:user:user"
								avatar="https://flowbite.com/docs/images/people/profile-picture-3.jpg"
							/>
							<div class="text-center">
								<button
									class="text-white bg-cyan-700 hover:bg-cyan-800 focus:ring-4 focus:ring-cyan-300 font-medium rounded-full text-sm px-1 py-1 focus:outline-none"
									type="button"
									data-drawer-target="drawer-swipe"
									data-drawer-show="drawer-swipe"
									data-drawer-placement="bottom"
									data-drawer-edge="true"
									data-drawer-edge-offset="bottom-[60px]"
									aria-controls="drawer-swipe">
									<div class="object-contain w-6">
										<dotlottie-player
											autoplay
											loop
											mode="normal"
											src="/assets/lottie/menu.lottie"
										></dotlottie-player>
									</div>
								</button>
							</div>

							<div class="text-center">
								<button
									class="text-white bg-cyan-700 hover:bg-cyan-800 focus:ring-4 focus:ring-cyan-300 font-medium rounded-full text-sm px-1 py-1 focus:outline-none"
									type="button"
									data-drawer-target="drawer-swipe"
									data-drawer-show="drawer-swipe"
									data-drawer-placement="bottom"
									data-drawer-edge="true"
									data-drawer-edge-offset="bottom-[60px]"
									aria-controls="drawer-swipe">
									<div class="object-contain w-6">
										<dotlottie-player
											autoplay
											loop
											mode="normal"
											src="/assets/lottie/rocket.lottie"
										></dotlottie-player>
									</div>
								</button>
							</div>

							<div class="text-center">
								<button
									class="text-white bg-cyan-700 hover:bg-cyan-800 focus:ring-4 focus:ring-cyan-300 font-medium rounded-full text-sm px-1.5 py-2 focus:outline-none"
									type="button"
									data-drawer-target="drawer-swipe"
									data-drawer-show="drawer-swipe"
									data-drawer-placement="bottom"
									data-drawer-edge="true"
									data-drawer-edge-offset="bottom-[60px]"
									aria-controls="drawer-swipe">
									<div class="object-contain w-5">
										<dotlottie-player
											autoplay
											loop
											mode="normal"
											src="/assets/lottie/beer.lottie"
										></dotlottie-player>
									</div>
								</button>
							</div>
						</VE>
					</div>
				</div>
			</header>

			<main class="max-w-full h-full flex relative overflow-y-hidden">
				<!-- Removed grid-flow-col auto-cols-max -->

				<slot />
			</main>
		</div>
	</div>

	<style is:global>
		:root {
			--color-kbve-menu-bg-dyn: #fff333;
			--accent: 136, 58, 234;
			--accent-light: 224, 204, 250;
			--accent-dark: 49, 10, 101;
			--accent-gradient: linear-gradient(
				45deg,
				rgb(var(--accent)),
				rgb(var(--accent-light)) 30%,
				white 60%
			);
		}

		code {
			font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
				DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New,
				monospace;
		}
	</style>
</html>
