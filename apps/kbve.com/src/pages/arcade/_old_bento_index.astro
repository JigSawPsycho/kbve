---
import MainLayout from "../../layouts/MainLayout.astro";

import Layout from '../../layouts/Layout.astro';
import Bento from '../../components/Bento.astro';

import type React from "react";

const title = 'KBVE.com Arcade - Classic & Exclusive Browser Games';
const description = "Dive into KBVE Arcade for a blast from the past with our collection of classic retro games, alongside exclusive, in-house developed fun you won't find anywhere else! Experience the nostalgia and discover new favorites, all playable in your browser. Perfect for gaming enthusiasts looking for a unique mix of old-school and innovative arcade games.";

import { getCollection, getEntry } from 'astro:content';

const arcadeCollection = await getCollection('arcade');


interface IAstroItem {
    title: string;
    description: string;
    slug: string;
    unsplash?: string;
    header: React.ReactNode;
    icon: React.ReactNode;
   
}

const astroItems: IAstroItem[] = arcadeCollection.map((entry)  => ({
     title: entry.data.title, 
     description: entry.data.description, 
     slug: `/arcade/${entry.slug}`,
     header: `<img loading="lazy" src="https://images.unsplash.com/photo-${entry.data.unsplash}?8&auto=format&fit=crop&w=400&q=80" class="object-cover flex flex-1 w-full h-full min-h-[6rem] rounded-xl" />`, 
     icon: `<IconClipboardCopy className="h-4 w-4 text-neutral-500" />`, 
   }));


---

<Layout title={title} description={description} >

    <Bento collection={astroItems} />

</Layout>