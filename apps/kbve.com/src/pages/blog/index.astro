---
import Layout from '../../layouts/Layout.astro';
import Bento from '../../components/Bento.astro';

import type React from "react";

const title = 'KBVE.com Blog - Insights and Innovations Unveiled';
const description = "Explore the KBVE Blog for a deep dive into the latest trends, tips, and technological breakthroughs. Join our community to engage with thought leaders and enthusiasts alike, discovering content that enlightens and inspires. From in-depth analyses to practical advice, we're here to fuel your passion for innovation.";

import { getCollection, getEntry } from 'astro:content';

const blogCollection = await getCollection('blog');


interface IAstroItem {
    title: string;
    description: string;
    slug: string;
    header: React.ReactNode;
    icon: React.ReactNode;
}

const astroItems: IAstroItem[] = blogCollection.map((entry)  => ({
     title: entry.data.title, 
     description: entry.data.description, 
     slug: `/blog/${entry.slug}`,
     header: `<img loading="lazy" src="https://images.unsplash.com/photo-${entry.data.unsplash}?8&auto=format&fit=crop&w=400&q=80" class="object-cover flex flex-1 w-full h-full min-h-[6rem] rounded-xl" />`, 
     icon: `<IconClipboardCopy className="h-4 w-4 text-neutral-500" />`, 
   }));


---
<Layout title={title} description={description} >

    <Bento collection={astroItems} />
    
</Layout>