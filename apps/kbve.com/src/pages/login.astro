	structuredData={{
		'@context': 'https://schema.org',
		'@type': 'WebPage',
		'@id': 'https://kbve.com/login/',
		url: 'https://kbve.com/login/',
		name: `${pageTitle}`,
		description: `{${pageDescription}}`,
		isPartOf: {
			'@type': 'WebSite',
			url: 'https://kbve.com',
			name: 'Kilo Byte Virtual Engine',
			description:
				'Elevate your efficiency with KBVE, Kilobyte Virtual Engine! Discover cutting-edge software and automation solutions designed to streamline and enhance your projects. Letâ€™s innovate together!',
		},
		inLanguage: 'en-US',
	}}>
	<div
		class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
		<div class="flex flex-col justify-between lg:flex-row">
			<div
				class="px-5 pt-6 pb-5 text-center border border-gray-300 rounded lg:w-3/5">

                <LoginForm client:only="svelte" />
