{
  "name": "rust_kanban",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/rust_kanban/src",
  "targets": {
    "build": {
      "executor": "@monodon/rust:build",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/rust_kanban"
      },
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "test": {
      "executor": "@monodon/rust:test",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/rust_kanban"
      },
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "lint": {
      "executor": "@monodon/rust:lint",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/rust_kanban"
      }
    },
    "run": {
      "executor": "@monodon/rust:run",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/rust_kanban"
      },
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "container": {
			"executor": "@nx-tools/nx-container:build",
			"defaultConfiguration": "local",
			"options": {
				"engine": "docker",
				"context": "apps/rust_kanban",
				"file": "apps/rust_kanban/Dockerfile",
				"metadata": {
					"images": ["kbve/kanban"],
					"load": true,
					"tags": ["1.01", "1.01.1"]
				},
				"configurations": {
					"local": {
						"tags": ["1.01", "1.01.1"],
						"push": false
					},
					"production": {
						"tags": ["1.01", "1.01.1"],
						"push": true,
						"customBuildOptions": "--push",
						"cache-from": [
							"type=registry,ref=kbve/kanban:buildcache"
						],
						"cache-to": [
							"type=registry,ref=kbve/kanban:buildcache,mode=max"
						]
					}
				}
			}
		},
    "orb": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					{
						"command": "pnpm nx container rust_kanban",
						"forwardAllArgs": false
					},
					{
						"command": "docker run -p 3000:3000 -p 3001:3001 -p 8086:8086 kbve/kanban:1.01",
						"forwardAllArgs": false
					}
				],
				"parallel": false
			}
		}
  },
  "tags": []
}
