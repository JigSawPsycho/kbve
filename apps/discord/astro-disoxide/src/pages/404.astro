---
/** @jsxImportSource astro */

import Layout from 'src/layout/Layout.astro';
import type { Props } from 'src/layout/Layout.astro';

---

<Layout title="404 - Not Found" description="404 Error : Page Not Found">
	<main class="flex h-screen items-center justify-center bg-[#28243d] p-6 overflow-hidden">
		<div class="text-center max-w-md space-y-6">
			<img
				src="/assets/media/mascot/burn_the_servers.png"
				alt="Lost Bot"
				class="mx-auto w-48 h-48 animate-bounce"
			/>

			<h1 class="text-7xl font-extrabold text-purple-500">404</h1>
			<p class="text-2xl text-white">This isn’t the server you’re looking for...</p>

			<p class="text-gray-400">
				The page might be offline, renamed, or never existed at all.
			</p>

			<a
				href="/"
				class="inline-block px-6 py-2 bg-purple-600 hover:bg-purple-500 text-white rounded shadow transition duration-300 ease-in-out">
				⬅ Back to Dashboard
			</a>
		</div>

		<!-- Optional animated floating dots background -->
		<div class="absolute inset-0 z-[-1] pointer-events-none overflow-hidden">
			<div class="absolute w-[6px] h-[6px] bg-purple-500 rounded-full top-1/4 left-1/3 animate-float" />
			<div class="absolute w-[8px] h-[8px] bg-white rounded-full top-2/3 left-2/4 animate-float-slow" />
			<div class="absolute w-[4px] h-[4px] bg-gray-400 rounded-full top-1/2 left-3/4 animate-float-fast" />
		  </div>
	</main>
</Layout>
