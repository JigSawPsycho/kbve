---
const iconOnly = true;
import { Icon } from '@astrojs/starlight/components';
---

<aside
	x-bind:class="sidebarOpen ? 'w-64' : 'w-16'"
	class="fixed inset-y-0 left-0 z-50 bg-gray-800 text-white flex flex-col p-3 transition-all duration-300 ease-in-out">
	<!-- Header -->
	<div class="flex flex-row items-center gap-2 mb-6">

        <button
			@click="sidebarOpen = !sidebarOpen"
			class="text-purple-400  hover:text-purple-200 p-1 rounded hover:bg-purple-700 transition"
			:title="sidebarOpen ? 'Collapse' : 'Expand'">
			<span x-show="sidebarOpen"><Icon name="close" /></span>
			<span x-show="!sidebarOpen"><Icon name="bars" /></span>
		</button>
        
		<img
        src="/assets/media/logo/discordsh_logo_menu2.png"
        alt="DiscordSH Logo"
        class="w-full h-12 object-contain transition-all duration-300 block outline-none border-none shadow-none cursor-pointer"
        x-show="sidebarOpen"
        @click="sidebarOpen = false"
    />

		<!-- Small Logo (visible when sidebar is collapsed) -->
		<img
			src="/assets/media/logo/discordsh_small_logo.png"
			alt="DiscordSH Mini Logo"
			class="w-8 transition-all duration-300 block outline-none border-none shadow-none cursor-pointer overflow-visible"
			x-show="!sidebarOpen"
			@click="sidebarOpen = true"
		/>

        

	</div>

	<!-- Nav links -->
	<nav class="flex flex-col gap-3">
		<a
			href="#"
			class="flex items-center gap-2 hover:bg-gray-700 rounded px-3 py-2 transition  hover:animate-pulse">
			<span class="text-lg text-purple-400"><Icon name="starlight" /></span>
			<span x-show="sidebarOpen" class="transition-opacity duration-300">
				Dashboard
			</span>
		</a>
		<a
			href="#"
			class="flex items-center gap-2 hover:bg-gray-700 rounded px-3 py-2 transition  hover:animate-pulse">
            <span class="text-lg text-purple-400"><Icon name="laptop" /></span>
			<span x-show="sidebarOpen">Servers</span>
		</a>
		<a
			href="#"
			class="flex items-center gap-2 hover:bg-gray-700 rounded px-3 py-2 transition  hover:animate-pulse">
            <span class="text-lg text-purple-400"><Icon name="open-book" /></span>
			<span x-show="sidebarOpen">Logs</span>
		</a>
		<a
			href="#"
			class="flex items-center gap-2 hover:bg-gray-700 rounded px-3 py-2 transition  hover:animate-pulse">
            <span class="text-lg text-purple-400"><Icon name="setting" /></span>
			<span x-show="sidebarOpen">Settings</span>
		</a>
	</nav>

	<!-- Footer -->
	<div class="mt-auto pt-6 border-t border-gray-700">
		<a
			href="#"
			class="flex items-center gap-2 text-sm text-gray-400 hover:text-purple-300 px-3 py-2 transition hover:bg-gray-700 rounded">
            <span class="text-lg text-purple-400"><Icon name="information" /></span>
			<span x-show="sidebarOpen">Logout</span>
		</a>
        <h1
		class="font-bold text-purple-400 transition-opacity duration-300 cursor-pointer"
		:class="{ 'text-xs scale-[.5]': !sidebarOpen }"
		@click="sidebarOpen = !sidebarOpen">
		DiscordSH
	</h1>
	</div>
    <div class="mt-auto pt-6 border-t border-gray-700">
	
    </div>
</aside>
