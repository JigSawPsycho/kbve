---
import Panel from './Panel.svelte'; 
import { $panelManager } from 'src/layout/scripts/nanostores';

const PANEL_IDS = ['top', 'right', 'bottom', 'left'] as const;
type PanelId = typeof PANEL_IDS[number];
---

{PANEL_IDS.map((id) => (
  <Panel
    client:only="svelte"
    panelId={id}
    open={$panelManager.get().panels[id].open}
    payload={$panelManager.get().panels[id].payload}
    closePanel={$panelManager.get().closePanel}
  />
))}
