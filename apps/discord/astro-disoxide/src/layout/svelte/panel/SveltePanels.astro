---
import Panel from './Panel.svelte';
import Sidebar from './Sidebar.svelte';
import Toast from './Toast.svelte';

const PANEL_IDS = ['top', 'right', 'bottom', 'left'] as const;
type PanelId = typeof PANEL_IDS[number];
---
{PANEL_IDS.map((id) => (
  <Panel client:only="svelte" panelId={id}>
    {id === 'left' && <Sidebar client:only="svelte" />}
    {id === 'bottom' && <Toast client:only="svelte" />}
  </Panel>
))}
