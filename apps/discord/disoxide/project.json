{
  "name": "disoxide",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/discord/disoxide/src",
  "targets": {
    "build": {
      "executor": "@monodon/rust:build",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/disoxide"
      },
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "test": {
      "executor": "@monodon/rust:test",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/disoxide"
      },
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "lint": {
      "executor": "@monodon/rust:lint",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/disoxide"
      }
    },
    "run": {
      "executor": "@monodon/rust:run",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/disoxide"
      },
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "defaultConfiguration": "local",
      "options": {
        "engine": "docker",
        "context": "apps/discord/disoxide",
        "file": "apps/discord/disoxide/Dockerfile",
        "metadata": {
          "images": [
            "kbve/disoxide"
          ],
          "load": true,
          "tags": [
            "1.2.0",
            "1.2"
          ]
        },
        "configurations": {
          "local": {
            "tags": [
              "1.2.0",
              "1.2"
            ],
            "push": false
          },
          "production": {
            "tags": [
              "1.2.0",
              "1.2"
            ],
            "push": true,
            "customBuildOptions": "--push",
            "cache-from": [
              "type=registry,ref=kbve/disoxide:buildcache"
            ],
            "cache-to": [
              "type=registry,ref=kbve/disoxide:buildcache,mode=max"
            ]
          }
        }
      }
    },
    "proto": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/discord/disoxide",
        "commands": [
          {
            "command": "cargo check --no-default-features",
            "forwardAllArgs": false
          }
        ],
        "parallel": false
      }
    },
    "orb": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm nx reset",
            "forwardAllArgs": false
          },
          {
            "command": "pnpm nx container disoxide",
            "forwardAllArgs": false
          },
          {
            "command": "docker run --env-file .env -p 3000:3000 kbve/disoxide:1.2.0",
            "forwardAllArgs": false
          }
        ],
        "parallel": false
      }
    },
    "stress": {
    "executor": "nx:run-commands",
    "options": {
      "commands": [
        {
          "command": "chmod +x ./tools/scripts/public/disoxide/disoxide-script.sh && ./tools/scripts/public/disoxide/disoxide-script.sh",
          "forwardAllArgs": false
        }
      ],
      "parallel": false
    }
  }
  },
  "tags": []
}
