---
//	Dev Only Hero - DO NOT USE IN PRODUCTION!

import RandomCharacters from './bgwords';
---

<Fragment>
	<div
		class="w-full h-[75vh] flex -translate-y-6 justify-center items-center overflow-hidden relative bg-cover bg-blend-multiply bg-gray-700 bg-opacity-80"
		style={{
			backgroundImage: `url(https://images.unsplash.com/photo-1561344640-2453889cde5b?q=80&w=1934&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)`,
		}}>
		<RandomCharacters client:only="react" />
		<div
			class="flex flex-col rounded shadow-md animate-pulse w-full h-full sm:w-3/4 sm:h-3/4 bg-gray-900"
			id="herolanding_loader">
			<div class="flex justify-center items-center">
				<div
					class="z-30 w-64 h-64 border-4 border-dashed rounded-full animate-spin border-cyan-200">
				</div>
			</div>
			<div class="flex-1 space-y-8 p-20">
				<div class="h-48 w-full bg-gray-700 rounded"></div>
				<div class="space-y-4">
					<div class="h-6 w-full bg-gray-700 rounded"></div>
					<div class="h-6 w-full bg-gray-700 rounded"></div>
					<div class="h-6 w-3/4 bg-gray-700 rounded"></div>
				</div>
			</div>
		</div>
	</div>
</Fragment>

<style>
	@keyframes rain {
		0% {
			transform: translateY(-10vh);
		}
		100% {
			transform: translateY(120vh);
		}
	}

	@keyframes fadeOut {
		from {
			opacity: 1;
		}
		to {
			opacity: 0;
		}
	}

	.fade-out {
		animation: fadeOut 1s ease-out forwards;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	.fade-in {
		animation: fadeIn 1s ease-in forwards;
	}

</style>

