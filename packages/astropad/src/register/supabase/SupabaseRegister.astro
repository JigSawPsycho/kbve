---
import SupabaseSvelteRegister from "./SupabaseSvelteRegister.svelte";
---

<div class="relative min-h-screen">
    <!-- Loader with absolute positioning and high z-index -->
    <div class="absolute inset-0 flex justify-center items-center min-h-screen transition-opacity duration-500" id="skeleton_login_loader">
      <div class="w-16 h-16 border-4 border-dashed rounded-full animate-spin border-cyan-500 dark:border-cyan-400"></div>
      
    </div>

    
  
    <!-- Form component positioned relative to the loader -->
    <div class="relative z-10">
      <SupabaseSvelteRegister client:only="svelte" />
    </div>
</div>