{
	"name": "unity-js",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/unity-js/src",
	"projectType": "library",
	"tags": [],
	"targets": {
		"build": {
			"executor": "@nx/js:tsc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/packages/unity-js",
				"main": "packages/unity-js/src/index.ts",
				"tsConfig": "packages/unity-js/tsconfig.lib.json",
				"assets": ["packages/unity-js/*.md"]
			}
		},
		"alpha": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "packages/unity-js",
				"commands": [
					"vite build",
					"mv ../../apps/rust_rareicon_gameserver/build/index.html ../../apps/rust_rareicon_gameserver/build/index.html.bak || true",
					"cp -r ../../dist/packages/unity-js/vite/* ../../apps/rust_rareicon_gameserver/build/",
					"mv ../../apps/rust_rareicon_gameserver/build/index.html.bak ../../apps/rust_rareicon_gameserver/build/index.html || true"
				],
				"parallel": false
			}
		}
	}
}
